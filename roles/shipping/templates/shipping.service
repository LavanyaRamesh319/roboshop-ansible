[Unit]
Description={{ component }} Service

[Service]
User=roboshop
Environment=CART_ENDPOINT={{ lookup('aws_ssm', 'dev.{{ component }}.cart_endpoint', region='us-east-1') }}
Environment=DB_HOST={{ lookup('aws_ssm', 'dev.{{ component }}.db_host', region='us-east-1') }}
ExecStart=/bin/java -jar /app/{{ component }}.jar
SyslogIdentifier={{ component }}

[Install]
WantedBy=multi-user.target
